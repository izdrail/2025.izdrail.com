<style is:global>
  :root {
    --background: #101010;
    --sec: #a476ff;
    --white: #dfdfdf;
    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;
  }

  * {
    font-family:
      "montserrat",
      -apple-system,
      system-ui,
      sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  /* Scrollbar styles */

  ::-webkit-scrollbar {
    width: 15px;
  }

  ::-webkit-scrollbar-track {
    background: var(--container);
    border-radius: 30px;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--background);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--pink);
  }

  /* Scrollbar styles for Firefox */
  * {
    scrollbar-width: thin;
    scrollbar-color: var(--line) var(--container);
  }

  /* Responsive Media Queries */

  /* Small phones (320px) */
  @media (max-width: 320px) {
    body {
      font-size: 14px;
    }

    h1 {
      font-size: 2rem !important;
    }

    .size-8 {
      width: 1.5rem;
      height: 1.5rem;
    }
  }

  /* Phones (480px) */
  @media (max-width: 480px) {
    body {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    h1 {
      font-size: 2.5rem !important;
    }

    h2,
    h3 {
      font-size: 1.5rem !important;
    }
  }

  /* Large phones (576px) */
  @media (min-width: 576px) {
    body {
      font-size: 16px;
    }
  }

  /* Tablets (768px) - existing breakpoint */
  @media (min-width: 768px) {
    h1 {
      font-size: 3.75rem !important;
    }
  }

  /* Large tablets (992px) */
  @media (min-width: 992px) {
    body {
      font-size: 16px;
    }

    .container {
      max-width: 960px;
    }
  }

  /* Desktop (1200px) */
  @media (min-width: 1200px) {
    .container {
      max-width: 1140px;
    }
  }

  /* Improve touch targets on mobile */
  @media (max-width: 768px) {
    a,
    button {
      min-height: 44px;
      min-width: 44px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>

<style>
    .legal-page {
        max-width: 900px;
        margin: 0 auto;
        padding: 4rem 2rem;
        color: var(--white);
    }

    .container {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 12px;
        padding: 3rem;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--sec);
    }

    .last-updated {
        color: var(--white-icon);
        font-size: 0.9rem;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    section {
        margin-bottom: 2.5rem;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--white);
    }

    p {
        line-height: 1.8;
        margin-bottom: 1rem;
        color: var(--white);
        opacity: 0.9;
    }

    ul {
        margin-left: 1.5rem;
        margin-bottom: 1rem;
    }

    li {
        line-height: 1.8;
        margin-bottom: 0.5rem;
        color: var(--white);
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .legal-page {
            padding: 2rem 1rem;
        }

        .container {
            padding: 2rem 1.5rem;
        }

        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.25rem;
        }
    }
</style>
